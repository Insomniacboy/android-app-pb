<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_info">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.75"
                android:scaleY="0.75"
                android:layout_gravity="center"
                android:src="@drawable/ic_probookslogo" />
             </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/welcome"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_reverse_info"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/desc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/desc_title"
                android:textColor="@color/white"
                android:shadowColor="#5883C3"
                android:gravity="left"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="left"
                android:text="@string/desc"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            </LinearLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:text="@string/price_title"
                android:shadowColor="#5883C3"
                android:gravity="left"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_choose"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt1_title"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt1"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt2_title"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt2"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt2_adv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt2_adv"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt3_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt3_title"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt3"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_opt3_adv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/price_opt3_adv"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/price_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/price_req"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_info"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/faq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:text="@string/faq_title"
            android:textColor="@color/white"
            android:shadowColor="#5883C3"
            android:gravity="left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/faq_num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_num1"
            android:layout_gravity="left"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/faq_num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq_num2"
            android:textColor="@color/white"
            android:clickable="true"
            android:onClick="OnClick"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
    </LinearLayout>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/partners_title"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/partners_title"
                android:shadowColor="#5883C3"
                android:gravity="center"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/partner1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/partner1"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <ImageView
                android:id="@+id/partner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="partner1"
                android:src="#888888" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/partner2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/partner2"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
            <ImageView
                android:id="@+id/partner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="partner2"
                android:src="#888888"
                android:paddingBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_reverse_info"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/contacts_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/contacts_title"
                android:textColor="@color/white"
                android:shadowColor="#5883C3"
                android:gravity="center"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mail_hyperlink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mail_hyperlink"
                android:textColor="@color/white"
                android:clickable="true"
                android:onClick="MailRed"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/contacts"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />
    </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleX="2"
                android:scaleY="2"
                android:layout_gravity="center"
                android:clickable="true"
                android:onClick="ProKG"
                android:src="@drawable/ic_prokglogo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Developer:\nAtabekov Temirbek"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="-35dp"
                android:layout_marginRight="5dp"
                android:text="Designer:\nMirlanova Uulzhan"/>
        </LinearLayout>
</ScrollView>
</layout>